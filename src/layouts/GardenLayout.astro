---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title} showHeader={true}>
  <div class="reading-layout">
    <div class="limited-width">
      <slot />
    </div>
  </div>
</BaseLayout>

<style>
  .reading-layout {
    grid-column: 2 / 12;
    display: grid;
    grid-template-columns: 1fr min(72ch, 100%) 1fr;
    padding-top: 5vh;
    font-size: var(--step-0);
  }

  .limited-width {
    grid-column: 2;
  }

  .limited-width :global(h1) {
    font-weight: 900;
    font-size: var(--step-3);
  }

  .limited-width :global(h2) {
    font-size: var(--step-2);
  }

  .limited-width :global(h3) {
    font-size: var(--step-1);
  }

  .limited-width :global(h4) {
    font-size: var(--step-0);
  }

  .limited-width :global(h5) {
    font-size: var(--step--1);
  }

  .limited-width :global(h1),
  .limited-width :global(h2) {
    letter-spacing: -1px;
  }

  .limited-width :global(h4) {
    font-weight: 300;
  }

  .limited-width :global(hr) {
    margin: var(--space-xl) 0;
  }

  .limited-width :global(p) {
    line-height: 200%;
    letter-spacing: 0.3px;
    font-weight: 400;
    margin: var(--space-m) 0;
  }

  .limited-width :global(p:first-of-type::first-letter) {
    font-size: 5.2rem;
    font-weight: 600;
    float: left;
    margin: 0.4rem 0.5rem 0 0;
    line-height: 0.9;
  }
</style>
